{
    "compilerOptions": {
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "allowJs": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "types": ["node"],
        "lib": ["es6"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}